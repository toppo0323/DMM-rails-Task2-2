<% if user_signed_in? %>
    <% if book.favorited_by?(current_user) %>
       <td>
        <%=link_to  destroy__path(book.id), method: :delete, remote: true do %>
        <i class="fa fa-heart unlike-btn"></i>
        <% end %>
        
       </td>
    <% else %>
       <td>
        <%=link_to create_favorite_path(book.id), method: :post, remote: true do %>
        <i class="fa fa-heart like-btn"></i> 
       <% end %>
        <%= book.favorites.count %>
       </td>
    <% end %>
<% end %>
