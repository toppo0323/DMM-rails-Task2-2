<div class='col-md-8 offset-md-1'>
<h1>Follow　User</h1>

<% if @users.exists? %>
  <% @users.each do |user| %>
    <table　class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</div>

